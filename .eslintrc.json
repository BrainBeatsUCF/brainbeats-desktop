{
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "indent" : ["error", 2],
    "quotes": ["error", "single"]
  },
  "overrides": [
    {
      "files": [ "*.json" ],
      "excludedFiles": ["*.js", "*.css"],
      "rules": {
        "quotes": ["error", "double" ]
      }
    }
  ]
}